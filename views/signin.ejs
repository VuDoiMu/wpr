<!DOCTYPE html>
<html>

<head>
    <title>Login</title>
</head>

<body>
    <h1>Login</h1>
    <form id="loginForm">
        <label for="emailInput">Email:</label><br>
        <input type="email" id="emailInput" name="email"><br>
        <div id="emailError"></div>
        <label for="passwordInput">Password:</label><br>
        <input type="password" id="passwordInput" name="password"><br>
        <div id="passwordError"></div>
        <input type="submit" value="Login">
    </form>
    <p>No account? <button onclick="window.location.href='/signup'">Sign Up Now!</button> </p>

    <script>
        document.getElementById('loginForm').addEventListener('submit', function (event) {
            event.preventDefault(); // Prevent the form from submitting normally

            const email = document.getElementById('emailInput').value;
            const password = document.getElementById('passwordInput').value;
            const emailError = document.getElementById('emailError')
            const passwordError = document.getElementById('passwordError')
            if (email === "") {
                emailError.textContent = 'Email cannot be empty';
            }

            if (email != "" && emailError.textContent != "") {
                emailError.textContent = '';
            }

            if (password === "") {
                passwordError.textContent = 'Password cannot be empty';
            }

            if (password != "" && passwordError.textContent != "") {
                passwordError.textContent = ""
            }

            if (password != "" && email != "") {
                fetch('/login', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({ email: email, password: password })
                })
                    .then(res => res.json())
                    .then(data => {
                        if (data.status === 'Email not found') {
                            document.getElementById('emailError').textContent = 'Email not found';
                        }

                        if (data.status === 'Wrong password') {
                            document.getElementById('passwordError').textContent = 'Wrong password';
                        }

                        if (data.status === 'success') {
                            window.location.href = '/inbox'
                        }
                    })
                    .catch((error) => {
                        console.error('Error:', error);
                    });
            }

        });
    </script>
</body>

</html>